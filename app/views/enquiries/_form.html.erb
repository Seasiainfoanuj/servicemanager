<% present(@enquiry) do |enquiry| %>

  <%= form_for(@enquiry, :html => {:class => "form-horizontal form-validate", :id => "enquire-form"}) do |f| %>
    <% if enquiry.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(enquiry.errors.count, "error") %> prohibited this enquiry from being saved:</h2>

        <ul>
        <% enquiry.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= render 'management_details', f: f %> 

    <%= render('enquirer_details', f: f) %>

    <% if @enquiry.hire_enquiry? || @enquiry.enquiry_type.hire_enquiry? %>
      <div class="box-title">
        <h3><i class="glyphicon-notes"></i>Enquiry Details</h3>
      </div>
      <div class="box-content">
        <div id="hire-details">
          <%= render('hire_details', f: f ) %>
        </div>  
      </div>
    <% end %>  

    <div class="box-title">
      <h3><i class="glyphicon-notes"></i>Enquiry Message</h3>
    </div>
    <div class="box-content">
      <div class="control-group">
        <%= f.label :details, "Details", :class => "control-label" %>
        <div class="controls">
          <%= f.text_area :details, {:id => 'workorder_details', :class => "span12", 'rows' => 5} %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>