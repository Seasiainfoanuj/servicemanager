<%= render(:partial => 'layouts/left') %>
<div id="main">
  <div class="container-fluid">
    <%= render(:partial => 'layouts/notice') %>
    <div class="page-header">
      <div class="pull-left">
        <h1>Master Quote Types</h1>
      </div>
      <div class="pull-right">
        <br>
         <% if current_user.has_role? :superadmin, :masteradmin %>
          <% if can? :create, MasterQuoteType %>
            <%= link_to '<i class="icon-plus-sign"></i> New Master Quote Type'.html_safe, new_master_quote_type_path, {:class => 'btn btn-grey'} %>
          <% end %>
         <% end %> 
      </div>
    </div>
    <div class="breadcrumbs">
      <%= render_crumbs %>
      <div class="close-bread">
        <a href="#"><i class="icon-remove"></i></a>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <div class="box box-condensed box-color box-bordered">
          <div class="box-title">
            <h3><i class="glyphicon-notes"></i>Master Quote Types</h3>
          </div>
          <div class="box-content nopadding">
            <table class="table table-hover table-nomargin dataTable dataTable-tools dataTable-colvis dataTable-scroll-x table-bordered">
              <thead>
                <tr>
                  <th>Type</th>
                  <% if current_user.has_role? :superadmin, :masteradmin %>
                  <th width="100">Actions</th>
                  <% end %>
                </tr>
              </thead>
              <tbody>
                <% @master_quote_types.each do |master_quote_type| %>
                  <tr>
                    <td><%= master_quote_type.name %></td>
                    <td>
                   <% if current_user.has_role? :superadmin, :masteradmin %>
                    <% if can? :update, MasterQuoteType %>
                      <%= link_to '<i class="icon-edit"></i>'.html_safe, edit_master_quote_type_path(master_quote_type), {:title => 'Edit', :class => 'btn', 'rel' => 'tooltip'} %>
                    <% end %>
                    <!--<% if can? :destroy, MasterQuoteType %>
                      <%= link_to '<i class="icon-ban-circle"></i>'.html_safe, master_quote_type, method: :delete, :class => 'delete-btn btn', :title => 'Destroy', 'rel' => 'tooltip', data: {confirm: "You are about to permanently delete #{master_quote_type.name}. You cannot reverse this action. Are you sure you want to proceed?"} %>
                    <% end %>-->
                    <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
