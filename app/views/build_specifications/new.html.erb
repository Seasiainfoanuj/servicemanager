<%= render(:partial => 'layouts/left') %>
<div id="main">
  <div class="container-fluid">
    <%= render(:partial => 'layouts/notice') %>
    <div class="page-header">
      <div class="pull-left">
        <h1>New Build Specification</h1>
      </div>
    </div>
    <div class="breadcrumbs">
      <%= render_crumbs %>
      <div class="close-bread">
        <a href="#"><i class="icon-remove"></i></a>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <div class="box box-condensed box-color box-bordered">
          <%= form_for [@build, @build_specification], html: {class: "form-horizontal form-validate"}, method: :post, url: {controller: "build_specifications", action: "create"} do |f| %>
            <%= render 'form', f:f %>
            <div class="actions">
              <%= f.submit :class => "btn btn-grey" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>