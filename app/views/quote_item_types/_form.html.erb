<%= form_for(@quote_item_type, :html => {:id => "quote-item-type-form", :class => "form-horizontal"}) do |f| %>
  <% if @quote_item_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@quote_item_type.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
        <% @quote_item_type.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="box-title">
    <h3><i class="glyphicon-notes"></i>Quote Item Type Details</h3>
  </div>
  <div class="box-content">
    <div class="control-group">
      <%= f.label :name, "Name", :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :name, :class => "input-xlarge" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :sort_order, "Sort Order", :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :sort_order, {:class => "input-small", 'data-rule-positiveNumber' => true} %>
        <div class="help-block">(Lower numbers ordered first)</div>
      </div>
    </div>

    <div class="control-group" style="margin-bottom: 0;">
      <%= f.label :allow_many_per_quote, "Allow many per quote?", :class => "control-label" %>
      <div class="controls check-box">
        <%= f.check_box :allow_many_per_quote, {:class => "icheck-me", "data-skin" => "square", "data-color" => "orange", :id => "allow-many-checkbox"} %>
      </div>  
    </div>

    <div class="control-group">
      <%= f.label :taxable, "Taxable option", :class => "control-label" %>
      <div class="controls">
        <%= f.select :taxable, options_for_select( options_for_taxable_item, selected: f.object.taxable ), { include_blank: "Select Taxable option" } %>
      </div>
    </div>

  </div>
<% end %>

