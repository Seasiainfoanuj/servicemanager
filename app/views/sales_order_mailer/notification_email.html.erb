<%= render 'shared/mailer/email_top' %>
<table width="100%" border="0" cellspacing="0" cellpadding="0" bgcolor="#f1f1f1">
  <tr>
     <td valign="top">
        <table width="100%" border="0" align="center" cellpadding="0" cellspacing="0">
           <!--Header Bar-->
           <tr>
              <td valign="top">
                 <table width="100%" height="5" border="0" align="center" cellpadding="0" cellspacing="0">
                    <tr>
                       <td valign="top" style="border-top:5px solid #ffffff;">
                          <table class="table600" width="600" border="0" align="center" cellpadding="0" cellspacing="0">

                             <tr>
                                <td height="20"></td>
                             </tr>
                             <tr>
                                <td align="left" valign="top">
                                   <table width="600" border="0" align="left" cellpadding="0" cellspacing="0" bgcolor="#ffffff" class="table600">
                                      <tr>
                                         <td style="padding-left:0px; padding-right:0px;">

                                            <!--Logo-->
                                            <table class="table1-3" width="183" bgcolor="#ffffff" border="0" align="left" cellpadding="0" cellspacing="0">
                                               <tr>
                                                  <td height="15" align="right" valign="top">
                                                  </td>
                                               </tr>
                                               <tr>
                                                  <td align="center">
                                                    <% if @sales_order.invoice_company.logo.present? %>
                                                      <%= image_tag "https://secure.bus4x4.com.au#{@sales_order.invoice_company.logo.url(:small)}", :alt => "#{@sales_order.invoice_company.name}" %>
                                                    <% else %>
                                                      <%= image_tag "https://secure.bus4x4.com.au/images/email/bus4x4-logo-email.png", :alt => "Bus 4x4 Pty Ltd" %>
                                                    <% end %>
                                                  </td>
                                               </tr>
                                            </table>
                                            <!--End Logo-->

                                            <!--Navigation-->
                                            <table border="0" align="right" cellpadding="0" cellspacing="0" class="table3-1">
                                               <tr>
                                                  <td class="top_fold" height="30" align="right" valign="top">
                                                     <img src="https://secure.bus4x4.com.au/images/email/fold_conner.jpg" width="15" height="27" alt="fold_conner" />
                                                  </td>
                                               </tr>
                                               <tr>
                                                  <td class="clear_pad" valign="top" style="padding-right:25px;">
                                                     <table height="27" border="0" align="center" cellpadding="0" cellspacing="0" >
                                                        <tr>
                                                           <td style="font-family: Helvetica, Arial, sans-serif; font-size:14px; color:#95a5a6; text-align: right;">
                                                              Order #<%= @sales_order.number %>
                                                           </td>
                                                        </tr>
                                                     </table>
                                                  </td>
                                               </tr>
                                               <tr>
                                                  <td height="30"></td>
                                               </tr>
                                            </table>
                                            <!--End Navigation-->
                                         </td>
                                      </tr>
                                   </table>
                                </td>
                             </tr>
                          </table>
                       </td>
                    </tr>
                 </table>
              </td>
           </tr>
           <!--End Header Bar-->
           <!--Header Text-->
           <tr>
              <td valign="top">
                 <table width="100%" border="0" cellspacing="0" cellpadding="0">
                    <tr>
                       <td bgcolor="#34495e" >
                          <table class="table600" bgcolor="#495c6e" width="600" border="0" align="center" cellpadding="0" cellspacing="0">
                             <tr>
                                <td>
                                   <table class="table550" width="550" border="0" align="center" cellpadding="0" cellspacing="0">
                                      <tr>
                                         <td height="25"></td>
                                      </tr>
                                      <!--Article Title-->

                                      <tr>
                                         <td align="left" valign="top" style="font-family: Helvetica, Arial, sans-serif; font-weight:bold; font-size:24px; color:#ffffff;">
                                          <% if @user.first_name.present? %>
                                            Hi <%= @user.first_name %>,
                                          <% end %>
                                        </td>
                                      </tr>

                                      <!--End Article Title-->

                                      <tr>
                                         <td align="left" valign="top" height="35"></td>
                                      </tr>
                                   </table>
                                </td>
                             </tr>
                          </table>
                       </td>
                    </tr>
                 </table>
              </td>
           </tr>
           <!--End Header Text-->
           <!--1:1 Content-->
           <tr>
              <td valign="top">
                 <table bgcolor="#FFFFFF" class="table600" width="600" border="0" align="center" cellpadding="0" cellspacing="0">
                    <tr>
                       <td height="30"></td>
                    </tr>
                    <tr>
                       <td valign="top">
                          <table class="table550" width="550" border="0" align="center" cellpadding="0" cellspacing="0">

                             <!--Content-->

                             <tr>
                                <td align="left" valign="top" style="font-family: Helvetica, Arial, sans-serif; font-size:13px; color:#999999; line-height:24px;">
                                  <% if @message.present? %>
                                    <p><%= @message %></p>
                                  <% end %>

                                  <p>To access this order, go to: <br>
                                  <%= link_to sales_order_url(@sales_order), sales_order_url(@sales_order, :user_email => @sales_order.customer.email, :user_token => @sales_order.customer.authentication_token) %>
                                  </p>

                                  Best Regards,<br />
                                  <%= @current_user.name %>
                                  <% if @current_user.phone.present? %>
                                    <br>
                                    <%= @current_user.phone %>
                                  <% end %>
                                  <br />
                                </td>
                             </tr>

                             <!--End Content--> </table>
                       </td>
                    </tr>
                    <tr>
                       <td height="30" style="border-bottom:1px dashed #bdc3c7;"></td>
                    </tr>
                 </table>
              </td>
           </tr>
           <!--End 1:1 Content-->
           <!--Footer-->
           <tr>
              <td valign="top">
                 <table width="100%" border="0" align="center" cellpadding="0" cellspacing="0">
                    <tr>
                       <td height="25">
                          <table bgcolor="#FFFFFF" class="table600" width="600" border="0" align="center" cellpadding="0" cellspacing="0">
                             <tr>
                                <td height="20"></td>
                             </tr>
                             <tr>
                                <td align="center" style="font-family: Helvetica, Arial, sans-serif; font-size:12px; font-weight: bold; color:#34495e;">
                                  <%= @sales_order.invoice_company.name %>
                                  <% if @sales_order.invoice_company.phone.present? %>
                                    <span style="color: #95a5a6">/</span>
                                    <%= @sales_order.invoice_company.phone %>
                                  <% end %>
                                </td>
                             </tr>
                             <tr>
                                <td height="25" align="left" valign="bottom">
                                  <img src="https://secure.bus4x4.com.au/images/email/fold_bottom.jpg" width="15" height="27" alt="fold_bottom" />
                                </td>
                             </tr>
                          </table>
                       </td>
                    </tr>
                    <tr>
                       <td height="100"></td>
                    </tr>
                 </table>
              </td>
           </tr>
           <!--End Footer-->
        </table>
     </td>
  </tr>
</table>
