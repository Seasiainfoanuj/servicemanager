<%= render(:partial => 'layouts/left') %>
<div id="main">
  <div class="container-fluid">
    <%= render(:partial => 'layouts/notice') %>
    <div class="page-header">
      <div class="pull-left">
        <h1>Master Quote Items</h1>
      </div>
      <div class="pull-right">
        <br>
        <% if current_user.has_role? :superadmin, :masteradmin %> 
        <% if can? :create, MasterQuoteItem %>
          <%= link_to '<i class="icon-plus-sign"></i> New Master Quote Item'.html_safe, new_master_quote_item_path, {:class => 'btn btn-grey'} %>
        <% end %>
        <% end %>
      </div>
    </div>
    <div class="breadcrumbs">
      <%= render_crumbs %>
      <div class="close-bread">
        <a href="#"><i class="icon-remove"></i></a>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <div class="box box-condensed box-color box-bordered">
          <div class="box-title">
            <h3><i class="glyphicon-notes"></i>Master Quote Items</h3>
          </div>
          <div class="box-content nopadding">
            <table data-source="<%= master_quote_items_url(format: "json") %>" class="table table-hover table-nomargin dataTable dataTable-ajax dataTable-tools dataTable-colvis dataTable-scroll-x table-bordered">
              <thead>
                <tr>
                  <th>Item type</th>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Buy Price (Exc. Tax)</th>
                  <th>Sell Price (Exc. Tax)</th>
                  <th data-orderable="false">Tags</th>
                  <%  if current_user.has_role? :superadmin, :masteradmin %>
                  <th width="100">Actions</th>
                  <% end %>
                </tr>
              </thead>
              <tbody>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
