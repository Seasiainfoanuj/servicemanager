<%= render(:partial => 'layouts/left') %>
<div id="main">
  <div class="container-fluid">
    <%= render(:partial => 'layouts/notice') %>
    <div class="page-header">
      <div class="pull-left">
        <h1>Edit Master Quote Item</h1>
      </div>
      <div class="pull-right">
        <br>
        <a href="#" class="btn btn-green submit-btn">Save Master Quote Item</a>
        <%= link_to '<i class="icon-list-alt"></i>'.html_safe, master_quote_items_path, {:title => "List All",:class => 'btn', "rel" => "tooltip", "data-placement" => "bottom"} %>
      </div>
    </div>
    <div class="breadcrumbs">
      <%= render_crumbs %>
      <div class="close-bread">
        <a href="#"><i class="icon-remove"></i></a>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <div class="alert alert-info" style="margin-top: 20px;">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <span class="label label-blue">TIP</span> Unlike standard quote items, editing master quote items will update the item for all master quotes.
        </div>
        <div class="box box-condensed box-color box-bordered">
          <%= render 'form' %>
          <div class="actions">
            <a href="#" class="btn btn-green submit-btn">Save Master Quote Item</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
