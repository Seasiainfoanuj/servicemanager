<%= form_for(@tax, :html => {:class => "form-horizontal form-validate"}) do |f| %>
  <% if @tax.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tax.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @tax.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="box-title">
    <h3><i class="icon-legal"></i> Tax Details</h3>
  </div>
  <div class="box-content">
    <div class="control-group">
      <%= f.label :name, "Name", :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :name, {:class => "input-large"} %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :rate_percent, "Rate", :class => "control-label" %>
      <div class="controls">
        <div class="input-append">
          <%= f.text_field :rate_percent, {:class => "input-mini"} %>
          <span class="add-on">%</span>
        </div>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :number, "Number/ID", :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :number, {:class => "input-large"} %>
        <div class="help-block">Eg: "RT710" Gov't tax ID</div>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :position, "Sort Position", :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :position, {:class => "input-small", 'data-rule-positiveNumber' => true} %>
        <div class="help-block">Lower numbers ordered first</div>
      </div>
    </div>
  </div>
  <br><br>
  <div class="actions">
    <%= f.submit :class => "btn btn-grey" %>
  </div>
<% end %>
