<%= render(:partial => 'layouts/left') %>
<div id="main">
  <div class="container-fluid">
    <%= render(:partial => 'layouts/notice') %>
    <div class="page-header">
      <div class="pull-left">
        <h1>Service Provider Invoices</h1>
      </div>
      <div class="pull-right">
        <br>
      </div>
    </div>
    <div class="breadcrumbs">
      <%= render_crumbs %>
      <div class="close-bread">
        <a href="#"><i class="icon-remove"></i></a>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <div class="box box-condensed box-color box-bordered">
          <div class="box-title">
            <h3><i class="glyphicon-notes"></i>Invoices</h3>

            <div class="show-all-check">
              <input type="checkbox" id="show-all" class="icheck-me" data-skin="square" data-color="red" value="false">
              <label for="show-all"><i class="icon-question-sign" title="Closed Stock Requests filtered by default" rel="tooltip" data-placement="top"></i> Show All</label>
            </div>
          </div>
          <div class="box-content nopadding">
            <table class="table table-hover table-nomargin dataTable dataTable-ajax dataTable-tools dataTable-colvis dataTable-scroll-x table-bordered" data-source="<%= sp_invoices_path(format: "json") %>"  data-default-sort-column="6" data-default-sort-direction="asc">
              <thead>
                <tr>
                  <th data-orderable="false">Job REF</th>
                  <th>Job Type</th>
                  <th data-orderable="false">Job Sched Date</th>
                  <th data-orderable="false">Vehicle</th>
                  <th data-orderable="false">Service Provider</th>
                  <th>Invoice Number</th>
                  <th>Status</th>
                  <th>Date Submitted</th>
                  <th data-orderable="false">Actions</th>
                </tr>
              </thead>
              <tbody>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
