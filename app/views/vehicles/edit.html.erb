<div id="left">
  <%= render 'layouts/left' %>
</div>
<div id="main">
  <div class="container-fluid">
    <%= render(:partial => 'layouts/notice') %>
    <div class="page-header">
      <div class="pull-left">
        <h1>Edit <%= "#{@vehicle.name}" %> <span class="label label-satblue"><%= @vehicle.vehicle_number %></span> <span class="label label-green"><%= @vehicle.call_sign %></span> <span class="label label-grey"><%= @vehicle.rego_number %></span> <span class="label"><%= "VIN# #{@vehicle.vin_number}" %></span></h1>
      </div>
      <div class="pull-right">
        <br>
        <a href="#" class="btn btn-green submit-btn">Update Vehicle</a>
        <%= link_to '<i class="icon-list-alt"></i>'.html_safe, vehicles_path, {:title => "List All",:class => 'btn', "rel" => "tooltip", "data-placement" => "bottom"} %>
      </div>
    </div>
    <div class="breadcrumbs">
      <%= render_crumbs %>
      <div class="close-bread">
        <a href="#"><i class="icon-remove"></i></a>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <div class="box box-condensed box-color box-bordered">
          <%= render 'form' %>
          <div class="actions">
            <a href="#" class="btn btn-green submit-btn">Update Vehicle</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
