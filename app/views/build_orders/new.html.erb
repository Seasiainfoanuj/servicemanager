<%= render(:partial => 'layouts/left') %>
<div id="main">
  <div class="container-fluid">
    <%= render(:partial => 'layouts/notice') %>
    <div class="page-header">
      <div class="pull-left">
        <h1>New Build Order</h1>
      </div>
      <div class="pull-right">
        <br>
        <a href="#" class="btn btn-green submit-btn">Create Build Order</a>
        <%= link_to '<i class="icon-list-alt"></i>'.html_safe, build_path(@build_order.build), {:title => "List All",:class => 'btn', "rel" => "tooltip", "data-placement" => "bottom"} %>
      </div>
    </div>
    <div class="breadcrumbs">
      <%= render_crumbs %>
      <div class="close-bread">
        <a href="#"><i class="icon-remove"></i></a>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <div class="alert alert-info" style="margin-top:20px">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <span class="label label-blue">TIP</span> To create this build order you must select a pre existing service provider. If you need to <%= link_to "add a new service provider", new_user_path %>, do that first before continuing.
        </div>
        <div class="box box-condensed box-color box-bordered">
          <%= render 'form' %>
          <div class="actions">
            <a href="#" class="btn btn-green submit-btn">Create Build Order</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
