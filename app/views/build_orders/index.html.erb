<%= render(:partial => 'layouts/left') %>
<div id="main">
  <div class="container-fluid">
    <%= render(:partial => 'layouts/notice') %>
    <div class="page-header">
      <div class="pull-left">
        <h1>Build Orders</h1>
      </div>
      <div class="pull-right">
        <br>
      </div>
    </div>
    <div class="breadcrumbs">
      <%= render_crumbs %>
      <div class="close-bread">
        <a href="#"><i class="icon-remove"></i></a>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <div class="box box-condensed box-color box-bordered">
          <div class="box-title">
            <h3><i class="glyphicon-notes"></i>Build Orders</h3>

            <div class="show-all-check">
              <input type="checkbox" id="show-all" class="icheck-me" data-skin="square" data-color="red" value="false">
              <label for="show-all"><i class="icon-question-sign" title="Complete and Cancelled Off Hire Jobs filtered by default" rel="tooltip" data-placement="top"></i> Show All</label>
            </div>
          </div>
          <div class="box-content nopadding">
            <% if current_user.has_role? :admin %>
              <% default_sort_column = 6 %>
            <% else %>
              <% default_sort_column = 5 %>
            <% end %>
            <table class="table table-hover table-nomargin dataTable dataTable-ajax dataTable-tools dataTable-colvis dataTable-scroll-x table-bordered" data-source="<%= build_orders_url(format: "json", vehicle_id: params[:vehicle_id], filtered_user: params[:filtered_user_id]) %>" data-default-sort-column="<%= default_sort_column %>" data-default-sort-direction="asc">
              <thead>
                <tr>
                  <th>REF</th>
                  <th>Name</th>
                  <th>Vehicle</th>
                  <th>Status</th>
                  <th>Service Provider</th>
                  <% if current_user.has_role? :admin %>
                    <th>Sp Invoice</th>
                  <% end %>
                  <th>Scheduled</th>
                  <th>ETC</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
