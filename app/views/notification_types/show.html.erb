<%= render(:partial => 'layouts/left') %>
<div id="main">
  <div class="container-fluid">
    <%= render(:partial => 'layouts/notice') %>
    <div class="page-header">

      <div class="pull-left">
        <h1><%= "Notification Type: #{@notification_type.event_full_name}" %></h1>
      </div>
      <div class="pull-right">
        <br>
        <%= link_to '<i class="icon-list-alt"></i>'.html_safe, notification_types_path, {:title => "List All",:class => 'btn', "rel" => "tooltip", "data-placement" => "bottom"} %>
        <% if can? :update, NotificationType %>
          <%= link_to '<i class="icon-edit"></i>'.html_safe, {:action => 'edit', :id => @notification_type.id}, {:title => 'Edit', :class => 'btn', 'rel' => 'tooltip', "data-placement" => "bottom"} %>
        <% end %>
      </div>
    </div>
    <div class="breadcrumbs">
      <%= render_crumbs %>
      <div class="close-bread">
        <a href="#"><i class="icon-remove"></i></a>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <div class="box box-condensed box-color box-bordered">
          <div class="box-title">
            <h3><i class="icon-calendar" style="position:relative; top: -2px;"></i>Notification Type Details</h3><%= manual_link('notification_types') %>
          </div>
          <div class="box-content nopadding">
            <table id="user" class="table table-bordered table-force-topborder" style="clear: both">
              <tbody>
                <tr>
                  <td width="15%">Event name</td>
                  <td width="80%"><%= @notification_type.event_full_name %></td>
                </tr>
                <tr>
                  <td width="15%">Recurring?</td>
                  <td><%= @notification_type.recurring ? "Yes" : "No" %></td>
                </tr>
                <% if @notification_type.recurring %>
                  <tr>
                    <td>Recur Period</td>
                    <td width="15%">Every <%= @notification_type.recur_period_days %> days</td>
                  </tr>
                <% end %>  
                <tr>
                  <td width="15%">Emails required?</td>
                  <td><%= @notification_type.emails_required ? "Yes" : "No" %></td>
                </tr>
                <tr>
                  <td width="15%">Upload required?</td>
                  <td><%= @notification_type.upload_required ? "Yes" : "No" %></td>
                </tr>
                <tr>
                  <td width="15%">Resource Document Type</td>
                  <td><%= @notification_type.upload_required ? @notification_type.resource_document_type : 'Not required' %></td>
                </tr>
                <tr>
                  <td width="15%">Label colour</td>
                  <td><%= notification_type_formatted_text(@notification_type.label_color) %></td>
                </tr>
                <tr>
                  <td width="15%">Notify periods</td>
                  <td width="80%"><%= @notification_type.notification_period_list %></td>
                </tr>
                  <td width="15%">Default message</td>
                  <td width="80%"><%= @notification_type.default_message.gsub("\r\n", "<br>").html_safe %></td>
                <tr>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
