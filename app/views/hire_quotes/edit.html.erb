<% present(@hire_quote) do |quote| %>

  <%= render(:partial => 'layouts/left') %>
  <div id="main">
    <div class="container-fluid">
      <%= render(:partial => 'layouts/notice') %>
      <div class="page-header">
        <div class="pull-left">
          <h1>Edit Hire Quote</h1>
        </div>
        <div class="pull-right">
          <br>
          <%= link_to '<i class="icon-list-alt"></i>'.html_safe, hire_quote_path(@hire_quote), {:title => "Return to Hire Quote view",:class => 'btn', "rel" => "tooltip", "data-placement" => "bottom"} %>
        </div>
      </div>

      <div class="breadcrumbs">
        <%= render_crumbs %>
        <div class="close-bread">
          <a href="#"><i class="icon-remove"></i></a>
        </div>
      </div>

      <br>
      <div class="row-fluid">
        <div class="span12">
          <div class="alert alert-warning" style="margin-top:20px">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <i class="icon icon-warning-sign"></i> If you intend to change the customer, do not change the authorised contact as well. The application will assign a suitable default for you. If the new customer is a company, you may afterwards select a different authorised contact. 
          </div>

        <div class="box box-condensed box-color box-bordered">
          <%= render 'form' %>
        </div>

      </div>
    </div>
  </div>
<% end %>
