<div id="send-hire-agreement-model" class="modal hide" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Send Hire Agreement</h3>
  </div>
  <div class="modal-body">
    <div style="padding: 20px; background: #fbfbfb; border: 1px dashed #DDDDDD;">
      <div class="row-fluid">
        <div class="control-group">
          <p><b>Send to:</b> <%= @hire_agreement.customer.email %></p>
        </div>
        <div class="control-group">
          <label for="email_message" id="message_label" class="control-label"><b>Optional Message</b></label>
          <div class="controls">
            <textarea name="email_message" id="email_message" class="span12" rows="5"></textarea>
          </div>
        </div>
        <div>
          To access your hire agreement, go to: <br>
          <%= hire_agreement_url(@hire_agreement) %>
          <br>
          <br>
          Best Regards,
          <br><br>
          <%= "#{@hire_agreement.manager.name} <br>".html_safe if @hire_agreement.manager %>
          <%= BUS4X4_HIRE_COMPANY_NAME %>
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button class="btn btn-grey" data-dismiss="modal" aria-hidden="true">Cancel</button>
    <%= link_to "Send", {:action => 'send_hire_agreement', :hire_agreement_id => @hire_agreement.id}, {:class => 'btn btn-satblue', :id => 'email_send_button'} %>
  </div>
</div>