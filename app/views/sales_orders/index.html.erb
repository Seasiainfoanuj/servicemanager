<%= render(:partial => 'layouts/left') %>
<div id="main">
  <div class="container-fluid">
    <%= render(:partial => 'layouts/notice') %>
    <div class="page-header">
      <div class="pull-left">
        <h1>Sales Orders</h1>
      </div>
      <div class="pull-right">
        <br>
        <% if can? :create, SalesOrder %>
          <%= link_to '<i class="icon-plus-sign"></i> New Sales Order'.html_safe, new_sales_order_path, {:class => 'btn btn-lightgrey'} %>
        <% end %>
      </div>
    </div>
    <div class="breadcrumbs">
      <%= render_crumbs %>
      <div class="close-bread">
        <a href="#"><i class="icon-remove"></i></a>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <div class="box box-condensed box-color box-bordered">
          <div class="box-title">
            <h3><i class="glyphicon-notes"></i>Sales Orders</h3>
          </div>
          <div class="box-content nopadding">
            <table class="table table-hover table-nomargin dataTable dataTable-ajax dataTable-tools dataTable-colvis dataTable-scroll-x table-bordered" data-source="<%= sales_orders_url(format: "json", filtered_user: params[:filtered_user_id]) %>">
              <thead>
                <tr>
                  <th>Number</th>
                  <th>Order Date</th>
                  <% if current_user.has_role? :admin %>
                    <th>Customer</th>
                    <th>Company</th>
                  <% end %>
                  <th>Quote REF</th>
                  <% if current_user.has_role? :admin %>
                    <th>Build REF</th>
                  <% end %>
                  <th>Deposit</th>
                  <th data-orderable="false">Last Completed Milestone</th>
                  <th data-orderable="false">Actions</th>
                </tr>
              </thead>
              <tbody>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
