<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :post, :class => "form-validate"}) do |f| %>

  <%= render(:partial => 'layouts/notice') %>
  
  <div class="control-group">
    <div class="email controls">
       <%= f.email_field :email, {:autofocus => true, :placeholder => 'Email address', :class => 'input-block-level', 'data-rule-required' => true, 'data-rule-email' => true} %>
    </div>
  </div>
    <%= f.submit "Send me reset password instructions", :class => 'btn btn-grey' %>
<% end %>

<div class="forget">
  <%= render "devise/shared/links" %>
</div>