<h2>Change your password</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "form-validate"}) do |f| %>

  <%= render(:partial => 'layouts/notice') %>

  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>
  
  <div class="control-group">
    <%= f.label :password, "New password" %>
    <div class="password controls">
       <%= f.password_field :password, {:autofocus => true, :class => 'input-block-level', 'data-rule-required' => true} %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password_confirmation, "Confirm new password" %>
    <div class="password controls">
       <%= f.password_field :password_confirmation, {:autofocus => true, :class => 'input-block-level', 'data-rule-required' => true} %>
    </div>
  </div>

    <%= f.submit "Change my password", :class => 'btn btn-grey' %>
<% end %>

<div class="forget">
  <%= render "devise/shared/links" %>
</div>