<div id="left">
  <%= render(:partial => 'layouts/left') %>
</div>
<div id="main" class="changelog">
  <div class="container-fluid">

    <%= render(:partial => 'layouts/notice') %>

    <div class="page-header">
      <div class="pull-left">
        <h1>Mailgun Bounces</h1>
      </div>
    </div>

    <div class="breadcrumbs">
      <%= render_crumbs %>
      <div class="close-bread">
        <a href="#"><i class="icon-remove"></i></a>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span12">
        <div class="box box-condensed box-color box-bordered">
          <div class="box-title">
            <h3><i class="glyphicon-message_out"></i> Mailgun Bounces</h3>
          </div>
          <div class="box-content nopadding">
            <table class="table table-hover table-nomargin dataTable dataTable-tools" data-default-sort-column="3" data-default-sort-direction="desc">
              <thead>
                <tr>
                  <th>Code</th>
                  <th>Address</th>
                  <th>Error</th>
                  <th width="100">Date</th>
                </tr>
              </thead>
              <tbody>
                <% @mailgun_bounces.each do |bounce_record| %>
                  <tr>
                    <td><label class="label label-red"><%= bounce_record['code'] %></label></td>
                    <td><%= bounce_record['address'] %></td>
                    <td><%= bounce_record['error'] %></td>
                    <td width="100"><%= Time.parse(bounce_record['created_at']).strftime("%Y-%m-%d %H:%M:%S") %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
