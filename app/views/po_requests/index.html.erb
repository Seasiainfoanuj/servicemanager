<%= render(:partial => 'layouts/left') %>
<div id="main">
  <div class="container-fluid">
    <%= render(:partial => 'layouts/notice') %>
    <div class="page-header">
      <div class="pull-left">
        <h1>PO Requests</h1>
      </div>
      <div class="pull-right">
        <br>
        <% if can? :create, PoRequest %>
          <%= link_to 'New PO Request'.html_safe, new_po_request_path, {:class => 'btn btn-satgreen'} %>
        <% end %>
      </div>
    </div>
    <div class="breadcrumbs">
      <%= render_crumbs %>
      <div class="close-bread">
        <a href="#"><i class="icon-remove"></i></a>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <div class="box box-condensed box-color box-bordered">
          <div class="box-title">
            <h3><i class="glyphicon-notes" style="position:relative; top: -3px;"></i>PO Requests</h3>

            <div class="show-all-check">
              <input type="checkbox" id="show-all" class="icheck-me" data-skin="square" data-color="red" value="false">
              <label for="show-all"><i class="icon-question-sign" title="Closed PO requests filtered by default" rel="tooltip" data-placement="top"></i> Show All</label>
            </div>
          </div>
          <div class="box-content nopadding">
            <table class="table table-hover table-nomargin dataTable dataTable-ajax dataTable-tools dataTable-colvis dataTable-scroll-x table-bordered" data-source="<%= po_requests_url(format: "json", filtered_user: params[:filtered_user_id]) %>" data-default-sort-column="0" data-default-sort-direction="desc">
              <thead>
                <tr>
                  <% if current_user.has_role? :admin %>
                    <th width="15" data-orderable="false"></th>
                    <th width="15"><i class="glyphicon-flag"></i></th>
                  <% end %>
                  <th>REF</th>
                  <th>Status</th>
                  <th>Service Provider</th>
                  <th>Vehicle</th>
                  <th>VIN</th>
                  <th>Scheduled</th>
                  <th>ETC</th>
                  <% if current_user.has_role? :admin %>
                    <th>Tags</th>
                  <% end %>
                  <th data-orderable="false">Actions</th>
                </tr>
              </thead>
              <tbody>
              </tbody>
            </table>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
