<%= render(:partial => 'layouts/left') %>
<div id="main">
  <div class="container-fluid">
    <%= render(:partial => 'layouts/notice') %>
    <div class="page-header">
      <div class="pull-left">
        <h1>All Clients</h1>
      </div>
      <div class="pull-right">
        <br>
        <% if can? :create, User %>
          <%= link_to '<i class="icon-plus-sign"></i> New User'.html_safe, new_user_path, {:class => 'btn btn-lightgrey'} %>
        <% end %>
        <% if can? :create, Company %>
          <%= link_to '<i class="icon-plus-sign"></i> New Company'.html_safe, new_company_path, {:class => 'btn btn-lightgrey'} %>
        <% end %>
      </div>
    </div>
    <div class="breadcrumbs">
      <%= render_crumbs %>
      <div class="close-bread">
        <a href="#"><i class="icon-remove"></i></a>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <div class="box box-condensed box-color box-bordered">
          <div class="box-title">
            <h3><i class="glyphicon-group" style="position:relative; top: -3px;"></i>All Clients</h3><%= manual_link('clients') if current_user.admin? %>
          </div>
          <div class="box-content nopadding">
            <table class="table table-hover table-nomargin dataTable dataTable-ajax dataTable-tools dataTable-colvis dataTable-scroll-x table-bordered" data-source="<%= clients_url(format: "json") %>">
              <thead>
                <tr>
                  <th>Client Ref</th>
                  <th>Type</th>
                  <th>Company Name</th>
                  <th>First name</th>
                  <th>Last name</th>
                  <th>Email</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>