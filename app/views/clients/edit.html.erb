<%= render(:partial => 'layouts/left') %>
<div id="main">
  <div class="container-fluid">
    <%= render(:partial => 'layouts/notice') %>
    <% if current_user.client.employee? %>
      <div class="page-header">
        <div class="pull-left">
          <h1><%= @client.name %>  <span class="label"><%= "REF# #{@client.reference_number}" %></span></h1>
        </div>
        <div class="pull-right">
          <br>
          <%= link_to '<i class="icon-list-alt"></i>'.html_safe, clients_path, {:title => "List All",:class => 'btn', "rel" => "tooltip", "data-placement" => "bottom"} %>
        </div>
      </div>
      <div class="breadcrumbs">
        <%= render_crumbs %>
        <div class="close-bread">
          <a href="#"><i class="icon-remove"></i></a>
        </div>
      </div>
    <% end %>
    <div class="row-fluid">
      <div class="span12">
        <div class="box box-condensed box-color box-bordered">
          <%= render 'form' %>
        </div>
      </div>
    </div>
  </div>
</div>
