<%= f.fields_for :fees do |fee| %>

  <% if fee.object.fee_type %>

    <%= fee.hidden_field :chargeable_id, value: fee.object.chargeable_id %>
    <%= fee.hidden_field :chargeable_type, value: fee.object.chargeable_type %>
    <%= fee.hidden_field :fee_type_id, value: fee.object.fee_type_id %>

    <div class="control-group">
      <%= label_tag nil, fee.object.fee_type.name, :class => "control-label" %>
      <div class="controls fee">
        <%= text_field_tag :charge_unit, nil, :class => "input-medium", readonly: true, value: fee.object.fee_type.charge_unit.titleize %>
        <%= fee.text_field :fee, :class => "input-small fee" %>
      </div>
      <div class="fee remove_fields_box">
        <%= fee.hidden_field :_destroy %>
        <%= link_to '<i class="icon-remove"></i>'.html_safe, '#', class: "remove_fields" %>
      </div>
    </div>

  <% end %>

<% end %>
