<%= render(:partial => 'layouts/left') %>
<div id="main">
  <div class="container-fluid">
    <%= render(:partial => 'layouts/notice') %>
    <div class="page-header">
      <div class="pull-left">
        <h1>Stock Requests</h1>
      </div>
      <div class="pull-right">
        <br>
        <% if can? :create, StockRequest %>
          <%= link_to '<i class="icon-plus-sign"></i> New Stock Request'.html_safe, new_stock_request_path, {:class => 'btn btn-satgreen'} %>
        <% end %>
      </div>
    </div>
    <div class="breadcrumbs">
      <%= render_crumbs %>
      <div class="close-bread">
        <a href="#"><i class="icon-remove"></i></a>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <div class="box box-condensed box-color box-bordered">
          <div class="box-title">
            <h3><i class="glyphicon-notes"></i>Stock Requests</h3>

            <div class="show-all-check">
              <input type="checkbox" id="show-all" class="icheck-me" data-skin="square" data-color="red" value="false">
              <label for="show-all"><i class="icon-question-sign" title="Closed Stock Requests filtered by default" rel="tooltip" data-placement="top"></i> Show All</label>
            </div>
          </div>
          <div class="box-content nopadding">
            <table class="table table-hover table-nomargin dataTable dataTable-ajax dataTable-tools dataTable-colvis dataTable-scroll-x table-bordered" data-source="<%= stock_requests_url(format: "json", filtered_user: params[:filtered_user_id]) %>">
              <thead>
                <tr>
                  <th>REF</th>
                  <th>Status</th>
                  <th>Company</th>
                  <th>Supplier</th>
                  <th>Customer</th>
                  <th>Make & Model</th>
                  <th>Transmission</th>
                  <th>Requested Delivery</th>
                  <th data-orderable="false">Actions</th>
                </tr>
              </thead>
              <tbody>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
